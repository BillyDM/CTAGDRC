{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure CTAGDRC",
      "type": "shell",
      "command": "cmake -S . -B build",
    },
    {
      "label": "Build CTAGDRC",
      "type": "shell",
      "command": "cmake --build build",
      "dependsOn": "Configure CTAGDRC",
      "group": {
        "kind": "build"
      },
      "problemMatcher": "$gcc",
    },
    {
      "label": "Run CTAGDRC Standalone",
      "type": "shell",
      "command": "killall CTAGDRC; ./build/CTAGDRC_artefacts/Standalone/CTAGDRC.app/Contents/MacOS/CTAGDRC",
      "dependsOn": "Build CTAGDRC",
    },
    {
      "label": "Validate CTAGDRC plugin using pluginval",
      "type": "shell",
      "command": "/Applications/pluginval.app/Contents/MacOS/pluginval --validate ./build/CTAGDRC_artefacts",
      "dependsOn": "Build CTAGDRC",
    },
  ]
}
